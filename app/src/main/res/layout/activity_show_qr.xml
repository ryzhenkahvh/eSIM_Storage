<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:padding="24dp">

    <!-- Карточка с QR -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_qr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_activate_system">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <TextView
                android:id="@+id/tv_qr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan to Activate"
                android:textColor="@android:color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"/>

            <!-- QR Code -->
            <ImageView
                android:id="@+id/iv_qr_code"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_raw_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LPA:1$..."
                android:textColor="#555555"
                android:textSize="12sp"
                android:ellipsize="middle"
                android:maxLines="1"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Deep Integration: Кнопка системной активации -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_activate_system"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Install in Android Settings"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/stat_sys_download"
        app:iconGravity="textStart"
        android:backgroundTint="@color/primary_neon"
        android:textColor="@color/black_background"
        app:layout_constraintBottom_toTopOf="@id/btn_delete_profile"/>

    <!-- Кнопка удаления -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Profile"
        style="@style/Widget.Material3.Button.TextButton"
        android:textColor="@color/danger"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconTint="@color/danger"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>